{
  "name": "agenthive",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=22"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w @agenthive/api",
    "db:migrate": "npm run db:migrate -w @agenthive/db",
    "api:dev": "npm run dev -w @agenthive/api",
    "indexer:dev": "npm run dev -w @agenthive/indexer",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8"
  }
}
